#!/usr/bin/env bash

echo "git fetch origin"
git fetch origin

echo "git pull origin/main"
git pull origin/main

echo "yarn workspace @rbui/core version patch --deferred"
yarn workspace @rbui/core version patch --deferred

echo "yarn workspace @rbui/components version patch --deferred"
yarn workspace @rbui/components version patch --deferred

echo "yarn version patch --deferred"
yarn version patch --deferred

echo "yarn version apply --all"
yarn version apply --all